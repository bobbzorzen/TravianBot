{
    "manifest_version": 2,
  
    "name": "Travian Bot Monitor",
    "description": "Travian bot monitor",
    "version": "1.0",
  
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "tabs", 
        "notifications",
        "management"
    ]
}